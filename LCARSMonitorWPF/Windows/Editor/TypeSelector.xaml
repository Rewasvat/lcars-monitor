<UserControl x:Class="LCARSMonitorWPF.Windows.Editor.TypeSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LCARSMonitorWPF.Windows.Editor"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="400">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="nameLabel" Content="TYPE:" VerticalContentAlignment="Center"/>
        <ComboBox x:Name="optionsBox" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Stretch"/>
    </Grid>
</UserControl>
